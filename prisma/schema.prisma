generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  articleSlug String   @unique
  excerpt     String?
  body        String
  clerkId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String
}

model Category {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  categorySlug String @unique
  status       String
}
