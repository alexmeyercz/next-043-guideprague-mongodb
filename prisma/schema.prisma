generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  // form fields
  title     String
  status    String
  // prefilled/auto
  clerkId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  // form fields
  name      String
  status    Boolean
  // prefilled/auto
  clerkId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
