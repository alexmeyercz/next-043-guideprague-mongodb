generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  // prefilled/auto
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // form fields
  title     String
}
